
.body{
  display: flex;
  flex-direction: column;
  height: 100vh;
}
.head,.bottom{
background-color: #ddd;
}

.list{
  flex-grow: 1;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  justify-content: space-between;
